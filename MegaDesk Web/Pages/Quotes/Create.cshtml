@page
@using MegaDesk_Web.Models
@model MegaDesk_Web.Pages.Quotes.CreateModel

@{
    ViewData["Title"] = "Add Quote";
}

<h1 class="quoteH1">Add Quote</h1>
<hr />
<div class="row">
    <div class="addQuoteGrid">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Desk.firstName" class="control-label">First Name</label>
                <input asp-for="Desk.firstName" class="form-control" placeholder="John" />
                <span asp-validation-for="Desk.firstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desk.lastName" class="control-label">Last Name</label>
                <input asp-for="Desk.lastName" class="form-control" placeholder="Doe" />
                <span asp-validation-for="Desk.lastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desk.deskWidth" class="control-label">Width</label>
                <input type="number" min="24" max="96" asp-for="Desk.deskWidth" placeholder="32" class="form-control" />
                <span asp-validation-for="Desk.deskWidth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desk.deskDepth" class="control-label">Depth</label>
                <input type="number" min="12" max="48" asp-for="Desk.deskDepth" placeholder="24" class="form-control" />
                <span asp-validation-for="Desk.deskDepth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desk.rushOrder" class="control-label">Rush Order Options</label>
                <select asp-for="Desk.rushOrder" asp-items="Html.GetEnumSelectList<rushOrder>()" class="form-control"></select>
                <span asp-validation-for="Desk.rushOrder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desk.dateAdded" class="control-label">Date</label>
                <input asp-for="Desk.dateAdded" class="form-control" placeholder="25/12/2022" />
                <span asp-validation-for="Desk.dateAdded" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desk.surfaceMaterial" class="control-label">Surface Material</label>
                <select asp-for="Desk.surfaceMaterial" class="form-control" id='surfaceSelect' onchange='get_image()'>
                    @foreach (var Item in Enum.GetValues(typeof(surfaceMaterial)))
                    {
                        <option id="surfOpt" value="@Convert.ToString(Item)">@Convert.ToString(Item)</option>
                    }
                </select>
                <span asp-validation-for="Desk.surfaceMaterial" class="text-danger"></span>
                <img name='surfacePreview' class="surfacePreview" style="width:100px;height:100px;" src='~/Images/surface/Laminate.jpg'>
            </div>
            <div class="slider form-group">
                <label asp-for="Desk.drawers" class="control-label"></label>
                <div class="range-slider">
                    <span id="rs-bullet" class="rs-label">0</span>
                    <input asp-for="Desk.drawers" id="rs-range-line" class="rs-range" type="range" min="0" max="7" step="1">
                </div>
                <div class="box-minmax">
                    <span>0</span><span>7</span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div class="back">
                <p>
                    <a asp-page="Index">Back to List</a>
                </p>
            </div>
        </form>
    </div>
</div>
<script src="~/js/drawersSlider.js"></script>
<script src="~/js/getImage.js"></script>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

@page
@model My_Scripture_Journal.Pages.Scriptures.IndexModel
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p class="createNew">
    <a asp-page="Create">Create New</a>
</p>
<form>
    <p>
        <select asp-for="BookChapters" asp-items="Model.Books">
            <option value="">All</option>
        </select>
        Keyword: <input type="text" asp-for="SearchString" >
        <input type="submit" value="Filter" class="filter" >
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Scripture[0].Book)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scripture[0].Chapter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scripture[0].DateAdded)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scripture[0].ScriptureBody)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scripture[0].Notes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Scripture) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Book)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Chapter)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateAdded)
            </td>
            <td class="scriptureRef">
@*              @Html.DisplayFor(modelItem => item.ScriptureBody)*@
                <a href="@item.ScriptureBody" target="_blank">@item.Book @item.Chapter</a>
            </td>
            <td class="notes">
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                <span class="manageEdit"><a asp-page="./Edit" asp-route-id="@item.ID">Edit</a></span>
                <span class="manageDetails"><a asp-page="./Details" asp-route-id="@item.ID">Details</a></span>
                <span class="manageDelete"><a asp-page="./Delete" asp-route-id="@item.ID">Delete</a></span>
            </td>
        </tr>
}
    </tbody>
</table>


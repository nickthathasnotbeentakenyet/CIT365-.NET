@model CatPaw_University.Models.Course

@{
    ViewData["Title"] = "Course Details";
}

<h1>Details</h1>

<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 text-light">
            @Html.DisplayNameFor(model => model.CourseID)
        </dt>
        <dd class="col-sm-10 font-weight-bold">
            @Html.DisplayFor(model => model.CourseID)
        </dd>
        <dt class="col-sm-2 text-light">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10 font-weight-bold">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2 text-light">
            @Html.DisplayNameFor(model => model.Credits)
        </dt>
        <dd class="col-sm-10 font-weight-bold">
            @Html.DisplayFor(model => model.Credits)
        </dd>
        <dt class="col-sm-2 text-light">
            @Html.DisplayNameFor(model => model.Department)
        </dt>
        <dd class="col-sm-10 font-weight-bold">
            @Html.DisplayFor(model => model.Department.Name)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-light" asp-action="Edit" asp-route-id="@Model.CourseID">Edit</a> |
    <a class="btn btn-dark" asp-action="Index">Back</a>
</div>
